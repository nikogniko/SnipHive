    // Використання HttpContext для доступу до сесії, аутентифікації тощо
    //var activeUserId = HttpContext.Session.GetString("UserId"); // Якщо зберігаєте UserId у сесії
    //var userName = HttpContext.Session.GetString("UserName"); // Якщо зберігаєте UserName у сесії

    // Або використання ViewBag для передачі даних з дочірніх представлень, якщо це було встановлено
    //var activeUserId = ViewBag.UserId;
    //var activeUserName = ViewBag.UserName;
}
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnipHive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SnippetsLibraryWebApp.styles.css" asp-append-version="true" />
</head>
<body ng-app="SnipHiveFrontend" ng-controller="MainController">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <h1 class="site-title">SnipHive</h1>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <ul class="navbar-nav flex-grow-1 justify-content-center">
                    <li class="nav-item active">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link  
                            @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active-link" : "text-style")">
                            Усі сніпети</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="SavedSnippets" asp-action="SavedSnippets" class="nav-link
                            @(ViewContext.RouteData.Values["controller"].ToString() == "SavedSnippets" ? "active-link" : "text-style")">
                            Обрані сніпети
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="PersonalSnippets" asp-action="PersonalSnippets" class="nav-link 
                            @(ViewContext.RouteData.Values["controller"].ToString() == "PersonalSnippets" ? "active-link" : "text-style")">
                            Авторські сніпети</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto align-items-center">
                    <!-- Show Login and Register buttons when not authenticated -->
                    <li class="nav-item" ng-if="!isAuthenticated">
                        <button type="button" class="btn secondary-btn" ng-click="openLoginModal()">Увійти</button>
                    </li>
                    <li class="nav-item" ng-if="!isAuthenticated">
                        <button type="button" class="btn primary-btn" ng-click="openRegisterModal()">Зареєструватися</button>
                    </li>
                
                    <!-- Show Add Snippet button and Username when authenticated -->
                    <li class="nav-item" ng-if="isAuthenticated">
                        <a href="/AddSnippet/AddSnippet" class="secondary-btn btn-add-snippet">+ Додати сніпет</a>
                    </li>
                    <li class="nav-item dropdown" ng-if="isAuthenticated">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" ng-click="toggleUserMenu()" role="button">
                            {{activeUserName}}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" ng-show="userMenuVisible">
                            <a class="dropdown-item" href="#" ng-click="logout()">Вийти</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SnipHive - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>\
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

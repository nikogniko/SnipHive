<!-- Views/Snippets/AllSnippets.cshtml -->
@model IEnumerable<SnippetsLibraryWebApp.Models.SnippetModel>
@{
    ViewData["Title"] = "Усі сніпети";
}
<h1>Усі сніпети</h1>

<!-- Вказівка на поточну сторінку для JavaScript -->
<div id="currentPage" data-page="AllSnippets"></div>

@await Html.PartialAsync("_FilterForm")

<!-- Контейнер для сніпетів -->
<div id="snippetsContent">
    @await Html.PartialAsync("_SnippetList", Model)
</div>